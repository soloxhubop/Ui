local player = game.Players.LocalPlayer

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = player:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

local Main = Instance.new("Frame")
Main.Parent = ScreenGui
Main.Size = UDim2.new(0, 500, 0, 320)
Main.Position = UDim2.new(0.5, -250, 0.5, -160)
Main.BackgroundColor3 = Color3.fromRGB(10, 15, 25)
Main.BorderSizePixel = 0
Main.Active = true
Main.Draggable = true
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 18)

local StrokeMain = Instance.new("UIStroke")
StrokeMain.Parent = Main
StrokeMain.Color = Color3.fromRGB(0, 170, 255)
StrokeMain.Thickness = 2

local Title = Instance.new("TextLabel")
Title.Parent = Main
Title.Size = UDim2.new(1, 0, 0, 60)
Title.BackgroundTransparency = 1
Title.Text = "Rexzy Autojoiner"
Title.Font = Enum.Font.GothamBold
Title.TextScaled = true
Title.TextColor3 = Color3.fromRGB(0, 170, 255)

local Close = Instance.new("TextButton")
Close.Parent = Main
Close.Size = UDim2.new(0, 40, 0, 40)
Close.Position = UDim2.new(1, -50, 0, 10)
Close.Text = "X"
Close.Font = Enum.Font.GothamBold
Close.TextScaled = true
Close.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
Close.TextColor3 = Color3.new(0,0,0)
Instance.new("UICorner", Close).CornerRadius = UDim.new(1, 0)

Close.MouseButton1Click:Connect(function()
	ScreenGui:Destroy()
end)

local function createSection(text, posX)
	local Section = Instance.new("Frame")
	Section.Parent = Main
	Section.Size = UDim2.new(0, 150, 0, 200)
	Section.Position = UDim2.new(0, posX, 0, 90)
	Section.BackgroundColor3 = Color3.fromRGB(20, 30, 50)
	Section.BorderSizePixel = 0
	Instance.new("UICorner", Section).CornerRadius = UDim.new(0, 14)

	local Stroke = Instance.new("UIStroke")
	Stroke.Parent = Section
	Stroke.Color = Color3.fromRGB(0, 170, 255)
	Stroke.Thickness = 1.5

	local Label = Instance.new("TextLabel")
	Label.Parent = Section
	Label.Size = UDim2.new(1, 0, 0, 50)
	Label.BackgroundTransparency = 1
	Label.Text = text
	Label.Font = Enum.Font.GothamBold
	Label.TextScaled = true
	Label.TextColor3 = Color3.fromRGB(0, 170, 255)

	local Button = Instance.new("TextButton")
	Button.Parent = Section
	Button.Size = UDim2.new(0.8, 0, 0, 40)
	Button.Position = UDim2.new(0.1, 0, 0.6, 0)
	Button.Text = "Open"
	Button.Font = Enum.Font.Gotham
	Button.TextScaled = true
	Button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
	Button.TextColor3 = Color3.new(0,0,0)
	Instance.new("UICorner", Button).CornerRadius = UDim.new(0, 10)
end

createSection("Auto Joiner", 25)
createSection("Personal Hub", 175)
createSection("Optimizer", 325)
